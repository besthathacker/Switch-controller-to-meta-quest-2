<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Status header -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="Status"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <!-- Connection info -->
    <TextView
        android:id="@+id/connectionInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No controller connected"
        android:paddingBottom="8dp"
        android:textSize="16sp"/>

    <!-- Battery info -->
    <TextView
        android:id="@+id/batteryInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Battery: N/A"
        android:paddingBottom="8dp"
        android:textSize="16sp"/>

    <!-- Joystick positions -->
    <TextView
        android:id="@+id/joystickInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Joystick: N/A"
        android:paddingBottom="8dp"
        android:textSize="16sp"/>

    <!-- Buttons pressed -->
    <TextView
        android:id="@+id/buttonsInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buttons: N/A"
        android:paddingBottom="8dp"
        android:textSize="16sp"/>

</LinearLayout>
